{% extends "layout.html.twig" %}

{% block content %}

	 <!-- Page Tittle Start -->
		<section class="page-tittle page-title-lg parallax-bg dark-overlay">
			<img class="parallax-img no-mobile-parallax" src="assets/images/bg-18.jpg" alt="" data-parallax='{"y": 150}'>
			<div class="container">
				<div class="page-tittle-head">
					<h2>Pimp It !</h2>
					<p>Pimper votre CV !</p>
				</div>
			    <ol class="breadcrumb pull-right mrg-top-30">
				  <li class="breadcrumb-item"><a href="#">Elements</a></li>
				  <li class="breadcrumb-item active">Forms</li>
				</ol>
			</div>
		</section>
        <!-- Page Tittle End -->

		<section class="section-1">
			<div class="container">
				<div class="row">
					<h2 class="mrg-btm-30">Formulaire CV</h2>
					<form method="POST">
					{% if pimpitForm %}
					{{ form_start(pimpitForm) }}
						<h2>Merci de compléter ces informations :</h2>

						{{ form_widget(pimpitForm.id,{value : app.user.id}) }}

						<fieldset>
							<h3>A votre sujet :</h3>

							<div class="form-group">
								<label><b>Prénom</b></label>
								{{ form_errors(pimpitForm.prenom) }}
								{{ form_widget(pimpitForm.prenom) }}
							</div>

							<div class="form-group">
								<label><b>Nom</b></label>
								{{ form_errors(pimpitForm.nom) }}
								{{ form_widget(pimpitForm.nom) }}
							</div>

							<div class="form-group">
								<label><b>Email</b></label>
								{{ form_errors(pimpitForm.username) }}
								{{ form_widget(pimpitForm.username, {value : app.user.username}) }}
							</div>

							<div class="form-group">
								<label><b>Date de naissance</b></label>
								{{ form_errors(pimpitForm.date_naissance) }}
								{{ form_widget(pimpitForm.date_naissance) }}
							</div>

							<div class="form-group">
								<label><b>Photo</b></label>

								{{ form_errors(pimpitForm.photo) }}
								{{ form_widget(pimpitForm.photo) }}
							</div>

						</fieldset>

						<fieldset>
							<h3>Vos coordonnées :</h2>

							<div class="form-group">
								<label><b>Adresse</b></label>
									{{ form_errors(pimpitForm.adresse) }}
									{{ form_widget(pimpitForm.adresse) }}
							</div>

							<div class="form-group">
								<label><b>Ville</b></label>
									{{ form_errors(pimpitForm.ville) }}
									{{ form_widget(pimpitForm.ville) }}
							</div>

							<div class="form-group">
								<label><b>Code Postal</b></label>
									{{ form_errors(pimpitForm.code_postal) }}
									{{ form_widget(pimpitForm.code_postal) }}
							</div>

							<div class="form-group">
								<label><b>Pays</b></label>
									{{ form_errors(pimpitForm.pays) }}
									{{ form_widget(pimpitForm.pays) }}
							</div>

							<div class="form-group">
								<label><b>Téléphone</b></label>
									{{ form_errors(pimpitForm.telephone) }}
									{{ form_widget(pimpitForm.telephone) }}
							</div>

						</fieldset>
						<h3>Si vous avez déjà un CV, vous pouvez nous l'envoyer :</h3>

						<div class="form-group">
							{{ form_errors(pimpitForm.fichier) }}
							{{ form_widget(pimpitForm.fichier) }}
						</div>
						<div class="form-group">
							{{ form_end(pimpitForm) }}
							{% endif %}
							<button type="submit" value="Envoyer"/>Enregistrer</button>
						</div>
					</form>


				</div>
			</div>
		</section>
		<!-- Forms End -->

{% endblock %}
