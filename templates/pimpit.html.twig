{% extends "layout.html.twig" %}

{% block content %}

<!-- Page Tittle Start -->
<section class="page-tittle page-tittle-lg parallax-bg dark-overlay">
	<img class="parallax-img no-mobile-parallax" src="{{ asset('images/about-bg1.jpg') }}" alt="" data-parallax='{"y": 150}'>
	<div class="container">
		<div class="page-tittle-head">
			<h1><small>Etape 1 : </small>Informations générales</h2>
			<p>L'étape indispensable pour nous permettre de pimper votre CV !</p>
		</div>
	</div>
</section>
<!-- Page Tittle End -->

<!-- Form wizard -->
<div class="container">
	<div class="row">
		<section>
        <div class="wizard">
			<div class="wizard-inner">
				<div class="connecting-line"></div>
				<ul class="nav nav-tabs" role="tablist">

					<li role="presentation" class="active">
						<a href="{{ path('pimpit') }}" aria-controls="step1" role="tab" title="Informations générales">
							<span class="round-tab">
								<i class="glyphicon glyphicon-folder-open"></i>
							</span>
						</a>
					</li>

					<li role="presentation">
						<a href="" aria-controls="step2" role="tab" title="Contenu de votre CV">
							<span class="round-tab">
								<i class="glyphicon glyphicon-pencil"></i>
							</span>
						</a>
					</li>
					<li role="presentation">
						<a href="" aria-controls="step3" role="tab" title="Template et options">
							<span class="round-tab">
								<i class="glyphicon glyphicon-picture"></i>
							</span>
						</a>
					</li>

					<li role="presentation">
						<a href="" data-toggle="tab" aria-controls="complete" role="tab" title="Récapitulatif">
							<span class="round-tab">
								<i class="glyphicon glyphicon-ok"></i>
							</span>
						</a>
					</li>
				</ul>
			</div>

            <!-- Pimp It ! -->
            {{ form_start(pimpitForm) }}
            {{ form_errors(pimpitForm) }}
			{{ form_widget(pimpitForm.id,{value : app.user.id}) }}
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                        <!-- <h2>Informations générales</h2> -->
                        <div class="container">
							<div class="row">
								<h2>A votre sujet :</h2>

								<div class="form-group">
									{{ form_row(pimpitForm.prenom) }}

								</div>

								<div class="form-group">
									{{ form_row(pimpitForm.nom) }}

								</div>

								<div class="form-group">
									{{ form_row(pimpitForm.username, {value : app.user.username}) }}

								</div>

								<div class="form-group">
									{{ form_row(pimpitForm.date_naissance) }}

								</div>

								<h2>Vos coordonnées :</h2>

								<div class="form-group">
										{{ form_row(pimpitForm.adresse) }}
								</div>

								<div class="form-group">
										{{ form_row(pimpitForm.ville) }}
								</div>

								<div class="form-group">
										{{ form_row(pimpitForm.code_postal) }}
								</div>

								<div class="form-group">
										{{ form_row(pimpitForm.pays) }}
								</div>

								<div class="form-group">
										{{ form_row(pimpitForm.telephone) }}
								</div>

								<h3>Si vous avez déjà un CV, vous pouvez nous l'envoyer :</h3>

								<div class="form-group">
									{{ form_widget(pimpitForm.cv) }}
								</div>

								<p>Sinon pas de problème, vous pourrez remplir votre futur CV à la page suivante !</p>

								<div class="form-group">
									<ul class="list-inline pull-right">
	                            		<input class="btn btn-md btn-dark next-step" type="submit" value="Enregistrer et continuer">
	                        		</ul>
	                        	</div>
							</div>
						</div>
                    </div>
                </div>
            {{ form_end(pimpitForm) }}
            <!-- Fin Pimp It -->
        </div>
    </section>
   </div>
</div>
<!-- Fin form wizard -->

{% endblock %}
