{% extends 'bo/layout_back.html.twig' %}

{% block title 'Pimp My CV' %}

{% block content %}


{{ dump(membres)}}
<!-- DF - FIN HEAD, NAVTOP ET NAVSIDE -->

        <!-- DF - DEBUT CONTENU -->

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Gestion des membres
                            <small>Consulter | Créer | Modifier | Supprimer</small>

                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> <a href="{{ path('accueil') }}">Dashboard</a>
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <!-- DF - DEBUT TABLEAU DES MEMBRES -->

                <div class="row">

                    <div class="col-lg-12">
                        <h2>Tableau des membres</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Email (user name)</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Date de naissance</th>
                                        <th>Téléphone</th>
                                        <th>Adresse</th>
                                        <th>Code Postal</th>
                                        <th>Ville</th>
                                        <th>Pays</th>
                                        <th>Statut membre</th>
                                        <th>Date d'inscription</th>
                                        <th>Rôle</th>
                                        <th colspan="2">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for membre in membres %}
                                    <tr>
                                        <td>{{ membre.id }}</td>
                                        <td>{{ membre.username }}</td>
                                        <td>{{ membre.nom }}</td>
                                        <td>{{ membre.prenom }}</td>
                                        <td>{{ membre.dateNaissance }}</td>
                                        <td>{{ membre.telephone }}</td>
                                        <td>{{ membre.adresse }}</td>
                                        <td>{{ membre.codepostal }}</td>
                                        <td>{{ membre.ville }}</td>
                                        <td>{{ membre.pays }}</td>
                                        <td>{{ membre.statutMembre }}</td>
                                        <td>{{ membre.dateInscription }}</td>
                                        <td>{{ membre.role }}</td>
                                        <td><a href="#"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                                        <td><a href="#"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- FIN TABLEAU DES MEMBRES -->

                <!-- DF - DEBUT FORMULAIRE -->

                <form role="form" method="POST">

                    <div class="row">
                    {% if membreFormBo %}
                        {{ form_start(membreFormBo) }}
                        <div class="col-lg-6"> <!-- formulaire coté gauche -->

                            <input type="hidden" name="id" value="{{ membre.id }}" />

                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" placeholder="Email (username)" name="username" value="{{ membre.username }}">
                            </div>

                            <div class="form-group">
                                <label>Nom</label>
                                {{ form_errors(membreFormBo.nom) }}
                                {{ form_widget(membreFormBo.nom) }}
                            </div>

                            <div class="form-group">
                                <label>Prénom</label>
                                <input class="form-control" placeholder="Prenom" name="prenom" value="{{ membre.prenom }}">
                            </div>

                            <div class="form-group">
                                <label>Date de naissance</label>
                                <input class="form-control" placeholder="Date de naissance" name="datenaissance" value="{{ membre.datenaissance }}">
                            </div>

                            <div class="form-group">
                                <label>Téléphone</label>
                                <input class="form-control" placeholder="Téléphone" name="telephone" value="{{ membre.telephone }}">
                            </div>

                            <div class="form-group">
                                <label>Adresse</label>
                                <input class="form-control" placeholder="Adresse" name="adresse" value="{{ membre.adresse }}">
                            </div>

                        </div>

                        <div class="col-lg-6"> <!-- formulaire coté droit -->

                            <div class="form-group">
                                <label>Code Postal</label>
                                <input class="form-control" placeholder="Code Postal" name="codepostal" value="{{ membre.codepostal }}">
                            </div>

                            <div class="form-group">
                                <label>Ville</label>
                                <input class="form-control" placeholder="Ville" name="ville" value="{{ membre.ville }}">
                            </div>

                            <div class="form-group">
                                <label>Pays</label>
                                <input class="form-control" placeholder="Pays" name="pays" value="{{ membre.pays }}">
                            </div>

                            <div class="form-group">
                            <label>Statut membre</label>
                            <select class="form-control" name="statutmembre" value="{{ membre.statutmembre }}">
                                <option selected="" value="enregistre">Enregistré</option>
                                <option selected="" value="paye">Payé</option>
                            </select>
                            </div>

                            <div class="form-group">
                                <label>Date d'inscription</label>
                                <input class="form-control" placeholder="Date d'inscription" name="dateinscription" value="{{ membre.dateinscription }}">
                            </div>

                            <div class="form-group">
                                <label>Rôle</label>
                                <input class="form-control" placeholder="Rôle (administrateur ou utilisateur)" name="role" value="{{ membre.role }}">
                            </div>                        

                        {% endfor %}

                            <button type="submit" class="btn btn-default">Enregistrer</button>

                        </div>

                    </div>

                </form>

                <!-- FIN FORMULAIRE -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock %}
