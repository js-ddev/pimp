{% extends 'bo/layout_back.html.twig' %}

{% block title 'Pimp My CV' %}

{% block content %}

{{ dump(commandes) }}

<!-- DF - FIN HEAD, NAVTOP ET NAVSIDE -->

        <!-- DF - DEBUT CONTENU -->

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Gestion des commandes
                            <small>Consulter | Créer | Modifier | Supprimer</small>

                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Blank Page
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <!-- DF - DEBUT TABLEAU DES COMMANDES -->

                <div class="row">

                    <div class="col-lg-12">
                        <h2>Tableau des commandes</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>N° de commande</th>
                                        <th>ID Membre</th>
                                        <th>ID CV</th>
                                        <th>Date de la commande</th>
                                        <th>Statut de la commande</th>
                                        <th>Type de prestation</th>
                                        <th>Prix</th>
                                        <th>Commentaires</th>
                                        <th colspan="2">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for commande in commandes %}
                                    <tr>
                                        <td>{{ commande.id }}</td>
                                        <td><a href="#">{{ commande.idmembre }}</a></td>
                                        <td><a href="#">{{ commande.idcv }}</a></td>
                                        <td>{{ commande.dateCommande }}</td>
                                        <td>{{ commande.statutCommande }}</td>
                                        <td>{{ commande.prestation }}</td>
                                        <td>{{ commande.prix }}</td>
                                        <td>{{ commande.commentaires }}</td>
                                        <td><a href="#"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                                        <td><a href="#"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- FIN TABLEAU DES COMMANDES -->

                <!-- DF - DEBUT FORMULAIRE -->

                <form role="form" method="POST">

                    <div class="row">
                    
                        {% for commande in commandes %}
                        <div class="col-lg-6"> <!-- formulaire coté gauche -->

                            <input type="hidden" name="id" value="{{ commande.id }}" />

                            <div class="form-group">
                                <label>Date de la commande</label>
                                <input class="form-control" placeholder="Date de la commande" name="datecommande" value="{{ commande.datecommande }}">
                            </div>

                            <div class="form-group">
                            <label>Statut de la commande</label>
                            <select class="form-control" name="statutcommande" value="{{ commande.statutcommande }}">
                                <option selected="" value="brouillon">Brouillon</option>
                                <option selected="" value="valide">Validé</option>
                                <option selected="" value="termine">Terminé</option>
                            </select>
                            </div>

                            <div class="form-group">
                            <label>Prestation</label>
                            <select class="form-control" name="prestation" value="{{ commande.prestation }}">
                                <option selected="" value="standard">Standard</option>
                                <option selected="" value="premium">Premium</option>
                            </select>
                            </div>                            

                            <div class="form-group">
                                <label>Prix</label>
                                <input class="form-control" placeholder="Prix" name="prix" value="{{ commande.prix }}">
                            </div>

                        </div>

                        <div class="col-lg-6"> <!-- formulaire coté droit -->

                            <div class="form-group">
                                <label>Commentaires</label>
                                <input class="form-control" placeholder="Commentaires" name="commentaires" value="{{ commande.commentaires }}">
                            </div>

                        {% endfor %}

                            <button type="submit" class="btn btn-default">Enregistrer</button>

                        </div>

                    </div>

                </form>

                <!-- FIN FORMULAIRE -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->


{% endblock %}
