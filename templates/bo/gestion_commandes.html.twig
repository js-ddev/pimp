{% extends 'bo/layout_back.html.twig' %}

{% block title 'Pimp My CV' %}

{% block content %}

{{ dump(commandes) }}

<!-- DF - FIN HEAD, NAVTOP ET NAVSIDE -->

        <!-- DF - DEBUT CONTENU -->

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Gestion des commandes
                            <small>Consulter | Créer | Modifier | Supprimer</small>

                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Blank Page
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <!-- DF - DEBUT TABLEAU DES COMMANDES -->

                <div class="row">

                    <div class="col-lg-12">
                        <h2>Tableau des commandes</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>N° de commande</th>
                                        <th>ID Membre</th>
                                        <th>ID CV</th>
                                        <th>Date de la commande</th>
                                        <th>Statut de la commande</th>
                                        <th>Type de prestation</th>
                                        <th>Prix</th>
                                        <th>Commentaires</th>
                                        <th colspan="3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for commande in commandes %}
                                    <tr>
                                        <td>{{ commande.id }}</td>
                                        <td><a href="#">{{ commande.idMembre }}</a></td>
                                        <td><a href="#">{{ commande.idCv }}</a></td>
                                        <td>{{ commande.dateCommande }}</td>
                                        <td>{{ commande.statutCommande }}</td>
                                        <td>{{ commande.prestation }}</td>
                                        <td>{{ commande.prix }}</td>
                                        <td>{{ commande.commentaires }}</td>
                                        <td><a href="#"><span class="glyphicon glyphicon-search"></span></a></td>
                                        <td><a href="#"><span class="glyphicon glyphicon-edit"></span></a></td>
                                        <td><a href="#"><span class="glyphicon glyphicon-trash"></span></a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- FIN TABLEAU DES COMMANDES -->

                <!-- DF - DEBUT FORMULAIRE -->

                <!-- /////////////////////////////////////////////////////////// -->
                <!-- CETTE PARTIE N'EST PAS COMMENCEE - TOUT LE FORM BUG !!!!! -->
                <!-- ///////////////////////////////////////////////////////////// -->

                <form role="form" method="POST">

                    <div class="row">
                        {% for commande in commandes %}
                        <div class="col-lg-6"> <!-- formulaire coté gauche -->

                            <input type="hidden" name="id" value="{{ commande.id }}" />

                            <div class="form-group">
                                <label>Date de la commande</label>
                                <input class="form-control" placeholder="Date de la commande" name="dateCommande" value="{{ commande.dateCommande }}">
                            </div>

                            <div class="form-group">
                                <label>Nom</label>
                                <input class="form-control" placeholder="Nom" name="nom" value="{{ membre.nom }}">
                            </div>

                            <div class="form-group">
                            <label>Statut membre</label>
                            <select class="form-control" name="statut_membre" value="{{ membre.statut_membre }}">
                                <option selected="" value="enregistre">Enregistré</option>
                                <option selected="" value="paye">Payé</option>
                            </select>
                            </div>

                            <div class="form-group">
                            <label>Statut membre</label>
                            <select class="form-control" name="statut_membre" value="{{ membre.statut_membre }}">
                                <option selected="" value="enregistre">Enregistré</option>
                                <option selected="" value="paye">Payé</option>
                            </select>
                            </div>                            

                            <div class="form-group">
                                <label>Téléphone</label>
                                <input class="form-control" placeholder="Téléphone" name="telephone" value="{{ membre.telephone }}">
                            </div>

                        </div>

                        <div class="col-lg-6"> <!-- formulaire coté droit -->

                            <div class="form-group">
                                <label>Code Postal</label>
                                <input class="form-control" placeholder="Code Postal" name="code_postal" value="{{ membre.code_postal }}">
                            </div>

                        {% endfor %}

                            <button type="submit" class="btn btn-default">Enregistrer</button>

                        </div>

                    </div>

                </form>

                <!-- FIN FORMULAIRE -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->


{% endblock %}
