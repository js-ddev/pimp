{% extends 'bo/layout_connexion.html.twig' %}

{% block title 'CONNEXION' %}

{% block content %}

<div class="col-lg-3"></div>

<div class="container-fluid col-lg-6">

	<div  id="page-wrapper" class="col-lg-12 row">

		<div class="col-lg-10">

			<h1 class="col-lg-12 page-header">
				Backoffice PimpMyCV
			</h1>

			<!-- DF - DEBUT FORMULAIRE -->

			<form class="col-lg-12 form-horizontal" role="form" action="{{ path('bo_login_check') }}" method="post">
			{{ error }}
				<div class="col-lg-12 form-group">
					<label class="col-lg-0 control-label">Email : </label>
					<input class="col-lg-12 form-control" type="text" placeholder="Email" name="_username" />
				</div>

				<div class="col-lg-12 form-group">
					<label class="col-lg-0 control-label">Mot de passe : </label>
					<input class="col-lg-12 form-control" type="password" placeholder="Mot de passe" name="_password" />
				</div>

				<div class="col-lg-12 form-group">
					<input class="btn btn-default" type="submit" value="Connexion" />
				</div>

			</form>

			<!-- DF - FIN FORMULAIRE -->

		</div>

	</div>

</div>

<div class="col-lg-3"></div>

{% endblock %}
