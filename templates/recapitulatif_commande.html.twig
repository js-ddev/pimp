{% extends "layout.html.twig" %}

{% block content %}
	 <!-- Page Tittle Start -->
        <section class="page-tittle page-tittle-md bg dark-overlay" style="background-image: url({{ asset('images/bg-2.jpg') }}">
            <div class="container">                         
                <div class="page-tittle-head display-block text-center">
                    <h2>Récapitulatif de la commande</h2>
                </div>
            </div>
        </section>
        <!-- Page Tittle End -->
        
        
        <!-- Cart Start -->
        <section class="section-1">
            <div class="container">
                
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card pdd-horizon-30 pdd-vertical-50 mrg-top-30">
                            <div class="border bottom">
                                <h3 class="mrg-btm-30">Résumé de votre commande</h3>
                               
                                 {% for commande in commandes %}

                                
                                <p>ID Membre: <span class="pull-right"> {{ commande.idMembre }} </span></p>
                                <p> Numero de commande: <span class="pull-right">{{ commande.idMembre }}</span>
                                <p>ID CV: <span class="pull-right"> {{ commande.idCv }} </span></p>
                                <p>Date commande: <span class="pull-right"> {{ commande.dateCommande }} </span></p>
                                <p>Statut de la commande <span class="pull-right">{{ commande.statutCommande }} </span></p>
                                 <p>Type de prestation <span class="pull-right">{{ commande.Prestation}} </span></p>
                            </div>
                            <p class="mrg-top-20">Total: <span class="pull-right text-dark font-size-18"><b>€ {{ commande.prix }}</b></span></p>
                             {% endfor %}
                            <div class="text-center mrg-top-30">
                                <a class="btn btn-dark btn-block" href="checkout.html">Payer</a>
                             
                            </div>
                       
                    </div>
                </div>
            </div>
        </section>
           
        <!-- Cart End -->
      
{% endblock %}