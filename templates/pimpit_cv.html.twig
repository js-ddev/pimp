								{{ form_widget(cvForm.langue_1) }}
								<label for="langue_1"></label>
							</div>

							<div class="form-group">
								<label for="langue_1_niveau">Votre niveau de 1 à 100 : *</label>
								<!-- <input type="text" id="langue_1_niveau"> -->
								<span id="slider1value"></span><span> %</span>
								<div style="max-width:250px" id="slider1"></div>

							</div>

							<div class="form-group">
								{{ form_errors(cvForm.langue_score_toeic) }}
								{{ form_widget(cvForm.langue_score_toeic) }}
								<label for="langue_score_toeic"></label>
