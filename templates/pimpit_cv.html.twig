									{{ form_widget(cvForm.reussite3) }}
									{{ form_errors(cvForm.reussite4) }}
									{{ form_widget(cvForm.reussite4) }}
									{{ form_errors(cvForm.reussite5) }}
									{{ form_widget(cvForm.reussite5) }}

								</div>


						</fieldset>

						<fieldset>
							<h3>Formation :</h3>

							<div class="form-group">
								{{ form_errors(cvForm.diplome) }}
								{{ form_widget(cvForm.diplome) }}
								<label for="diplome"></label>
							</div>

							<div class="form-group">
								{{ form_errors(cvForm.etablissement_formation) }}
								{{ form_widget(cvForm.etablissement_formation) }}
