{% extends "layout.html.twig" %}

{% block content %}

<!-- Page Tittle Start -->
<section class="page-tittle page-tittle-lg parallax-bg dark-overlay">
	<img class="parallax-img no-mobile-parallax" src="{{ asset('images/about-bg1.jpg') }}" alt="" data-parallax='{"y": 150}'>
	<div class="container">
		<div class="page-tittle-head">
			<h2>Pimp It !</h2>
			<p>Pimper votre CV !</p>
		</div>
	</div>
</section>
<!-- Page Tittle End -->

<!-- Form wizard -->
<div class="container">
	<div class="row">
		<section>
        <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="disabled">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Informations personnelles">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-folder-open"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="active">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Contenu du CV">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-picture"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Formulaire CV -->
            {{ form_start(cvForm) }}
			{{ form_errors(cvForm) }}
			{{ form_widget(cvForm.id_membre,{value : app.user.id}) }}
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step2">
                        <h3>Contenu de votre CV</h3>

                        <div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="panel-group">
										<!-- Partie informations diverses -->
										<div class="panel panel-default">
											<div class="panel-heading">
												<span class="panel-title">
												<a data-toggle="collapse" href="#collapse1">
												<i class="ei ei-id-card-alt"></i> Informations diverses</a>
												</span>
											</div>
											<div id="collapse1" class="panel-collapse collapse">
												<div class="panel-body">
													<div class="form-group">
														<label for="email_cv">Email*</label>
														{{ form_errors(cvForm.email_cv) }}
														{{ form_widget(cvForm.email_cv) }}
													</div>

													<div class="form-group">
														<label for="situation">Situation familiale :</label>
														{{ form_errors(cvForm.famille) }}
														{{ form_widget(cvForm.famille) }}
													</div>

													<div class="form-group">
														<label for="nationalite">Nationalité*</label>
														{{ form_errors(cvForm.nationalite) }}
														{{ form_widget(cvForm.nationalite) }}
													</div>

													<div class="form-group">
														<label for="langue_maternelle">Langue maternelle*</label>
														{{ form_errors(cvForm.langue_maternelle) }}
														{{ form_widget(cvForm.langue_maternelle) }}
													</div>

													<div class="form-group">
														<label>Permis de travail / séjour</label>
														{{ form_errors(cvForm.permis_travail) }}
														{{ form_widget(cvForm.permis_travail) }}

													</div>

													<div class="form-group">
														<label>Permis de conduire</label>
														{{ form_errors(cvForm.permis_conduire) }}
														{{ form_widget(cvForm.permis_conduire) }}
													</div>




									</div>
								</div>

								{{ form_start(experienceForm) }}
								{{ form_errors(experienceForm) }}
								<!--  Partie expérience -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<span class="panel-title">
										<a data-toggle="collapse" class="collapsed" href="#collapse2">
										<i class="ei ei-tie"></i> Expériences</a>
										</span>
									</div>
									<div id="collapse2" class="panel-collapse collapse">
										<div class="panel-body">
											<h4>Entreprise :</h4>
											{{ form_widget(experienceForm.type,{value :'entreprise'	}) }}

											<div class="form-group">
												<label for="nom">Nom de l'entreprise*</label>
												{{ form_errors(experienceForm.nom) }}
												{{ form_widget(experienceForm.nom) }}
											</div>

											<div class="form-group">
												<label>Secteur* : </label>
												{{ form_errors(experienceForm.secteur) }}
												{{ form_widget(experienceForm.secteur) }}
											</div>

											<div class="form-group">
												<label for="produits_services">Produits / Services</label>
												{{ form_errors(experienceForm.description) }}
												{{ form_widget(experienceForm.description) }}
											</div>

											<div class="form-group">
												<label for="ca">Chiffre d'affaire</label>
												{{ form_errors(experienceForm.ca) }}
												{{ form_widget(experienceForm.ca) }}
											</div>

											<div class="form-group">
												<label for="effectif">Effectifs :</label>
												{{ form_errors(experienceForm.effectif) }}
												{{ form_widget(experienceForm.effectif) }}
											</div>

											<div class="form-group">
												<label for="url_entreprise">Site web de l'entreprise</label>
												{{ form_errors(experienceForm.url_experience) }}
												{{ form_widget(experienceForm.url_experience) }}
											</div>

											<div class="form-group">
												<label for="poste">Intitulé du poste*</label>
												{{ form_errors(experienceForm.poste) }}
												{{ form_widget(experienceForm.poste) }}
											</div>

											<div class="form-group">
												<label for="role">Rôle dans l'entreprise*</label>
												{{ form_errors(experienceForm.role) }}
												{{ form_widget(experienceForm.role) }}
											</div>
											<div class="form-group">
												<label for="lieu_entreprise">Localisation du poste*</label>
												{{ form_errors(experienceForm.lieu) }}
												{{ form_widget(experienceForm.lieu) }}
											</div>

											<div class="form-group">
												<label for="Duree">Durée du poste* : </label>
												<span> de </span>
												{{ form_errors(experienceForm.date_debut) }}
												{{ form_widget(experienceForm.date_debut) }}

												<select class="" name="annee_debut">
													{% for annee_debut in range("now"|date("Y"),1950) %}
														<option value="{{ annee_debut }}"> {{ annee_debut }}</option>
													{% endfor %}
												</select>

												<span> à </span>
												{{ form_errors(experienceForm.date_fin) }}
												{{ form_widget(experienceForm.date_fin) }}

												<select class="" name="annee_fin">
													{% for annee_fin in range("now"|date("Y"),1950) %}
														<option value="{{ annee_fin }}"> {{ annee_fin }}</option>
													{% endfor %}
												</select>
											</div>

											<div class="form-group">
												<label for="responsabilite">Responsabilités* :</label><br />
												{{ form_errors(experienceForm.responsabilite1) }}
												{{ form_widget(experienceForm.responsabilite1) }}
												{{ form_errors(experienceForm.responsabilite2) }}
												{{ form_widget(experienceForm.responsabilite2) }}
												{{ form_errors(experienceForm.responsabilite3) }}
												{{ form_widget(experienceForm.responsabilite3) }}
												{{ form_errors(experienceForm.responsabilite4) }}
												{{ form_widget(experienceForm.responsabilite4) }}
												{{ form_errors(experienceForm.responsabilite5) }}
												{{ form_widget(experienceForm.responsabilite5) }}
											</div>

											<div class="form-group">
												<label for="realisation">Réussites / accomplissements* :</label><br />
												{{ form_errors(experienceForm.realisation1) }}
												{{ form_widget(experienceForm.realisation1) }}
												{{ form_errors(experienceForm.realisation2) }}
												{{ form_widget(experienceForm.realisation2) }}
												{{ form_errors(experienceForm.realisation3) }}
												{{ form_widget(experienceForm.realisation3) }}
												{{ form_errors(experienceForm.realisation4) }}
												{{ form_widget(experienceForm.realisation4) }}
												{{ form_errors(experienceForm.realisation5) }}
												{{ form_widget(experienceForm.realisation5) }}
											</div>
											<div class="form-group col-md-12">
												<input class="btn btn-md btn-dark" type="submit" value="Valider">
											</div>
										</div>
									</div>
								</div>
								{{ form_end(cvForm) }}
								<!-- Fin Partie expérience -->


								<!-- Partie informations personnelles -->
								<div class="panel panel-default">
									<div class="panel-heading">
										<span class="panel-title">
										<a data-toggle="collapse" class="collapsed" href="#collapse7">
										<i class="ei ei-human-resources"></i> Informations personnelles</a>
										</span>
									</div>
									<div id="collapse7" class="panel-collapse collapse">
										<div class="panel-body">
											<div class="row mrg-top-70">
												<div class="col-md-10 col-md-offset-1">
												<div class="text-center">
													<h3 class="mrg-btm-40">Informations personnelles</h3>
												</div>
												<div class="card">
													<ul class="nav nav-tabs tab-style-4 item-5">
														<li class="active"><a data-toggle="tab" href="#s4-option-1"><i class="display-block ei ei-human-resources"></i>Description</a></li>
														<li><a data-toggle="tab" href="#s4-option-2"><i class="ei ei-favorite-heart"></i>Centres d'intérêt</a></li>
														<li><a data-toggle="tab" href="#s4-option-3"><i class="ei ei-departures"></i>Voyages</a></li>
														<li><a data-toggle="tab" href="#s4-option-4"><i class="ei ei-sharethis"></i>Réseaux sociaux</a></li>
														<li><a data-toggle="tab" href="#s4-option-5"><i class="ei ei-id-card-alt"></i>Informations diverses</a></li>
													</ul>
													<div class="tab-content pdd-horizon-30">
														<div id="s4-option-1" class="tab-pane fade in active">
															<h4 class="no-mrg-top mrg-btm-20">Description</h4>
															<label for="description"></label>

														</div>

														<div id="s4-option-2" class="tab-pane fade">
															<h4 class="no-mrg-top mrg-btm-20">Centres d'intérêt</h4>
															<div class="form-group">
																<label for="passion_1"></label>


																<label for="passion">Votre niveau de pratique</label>
																<span id="slider2value"></span><span> %</span>
																<div style="max-width:250px" id="slider2"></div>
															</div>
														</div>

														<div id="s4-option-3" class="tab-pane fade">
															<h4 class="no-mrg-top mrg-btm-20">Voyages</h4>
															<div class="form-group">
																<label for="voyages"></label>

															</div>
														</div>

														<div id="s4-option-4" class="tab-pane fade">
															<h4 class="no-mrg-top mrg-btm-20">Réseaux sociaux</h4>
															<div class="form-group">
																<i class="ei ei-linkedin"></i>
																<label for="url_linkdein"> LinkedIn</label>
																{{ form_errors(cvForm.linkedin) }}
																{{ form_widget(cvForm.linkedin) }}
															</div>
															<div class="form-group">
																<i class="ei ei-twitter"></i>
																<label for="url_twitter"> Twitter</label>
																{{ form_errors(cvForm.twitter) }}
																{{ form_widget(cvForm.twitter) }}
															</div>
															<div class="form-group">
																<i class="ei ei-skype"></i>
																<label for="url_skype"> Skype</label>
																{{ form_errors(cvForm.skype) }}
																{{ form_widget(cvForm.skype) }}
															</div>
															<div class="form-group">
																<i class="ei ei-monitor"></i>
																<label for="url_perso"> Site personnel</label>
																{{ form_errors(cvForm.site_perso) }}
																{{ form_widget(cvForm.site_perso) }}
															</div>
															<div class="form-group">
																<i class="ei ei-monitor"></i>
																<label for="url_autre"> Autre site</label>
																{{ form_errors(cvForm.url_autre) }}
																{{ form_widget(cvForm.url_autre) }}
															</div>
														</div>

															</div>

														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<!-- Fin Partie informations personnelles -->

								<div class="form-group">
									<ul class="list-inline pull-right">
			                            <li><a href="{{ path('pimpit') }}"><button type="button" class="btn btn-default prev-step">Etape précédente</button></a></li>
			                            <input class="btn btn-md btn-dark next step" type="submit" value="Enregistrer et continuer">
			                        </ul>
			                    </div>
							</div>
						</div>
					</div>
				</div>
			{{ form_end(cvForm) }}
			<!-- Fin formulaire -->
        </div>
    </section>
   </div>
</div>
<!-- Fin form wizard -->

{% endblock %}
