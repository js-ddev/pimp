{% extends "layout.html.twig" %}

{% block content %}

<!-- Page Tittle Start -->
<section class="page-tittle page-tittle-lg parallax-bg dark-overlay">
	<img class="parallax-img no-mobile-parallax" src="{{ asset('images/about-bg1.jpg') }}" alt="" data-parallax='{"y": 150}'>
	<div class="container">
		<div class="page-tittle-head">
			<h2>Pimp It !</h2>
			<p>Pimper votre CV !</p>
		</div>
	</div>
</section>
<!-- Page Tittle End -->

<!-- Form wizard -->
<div class="container">
	<div class="row">
		<section>
        <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="disabled">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Informations personnelles">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-folder-open"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="active">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Contenu du CV">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Template et options">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-picture"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Récapitulatif">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Formulaire -->
            {{ form_start(formulaireForm)}}
			{{ form_errors(formulaireForm)}}
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step2">
                        <h3>Contenu de votre CV</h3>

                        <div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="panel-group">

										<!-- XXX CvForm XXX -->

										<!--  Partie expérience -->
										<div class="panel panel-default">
											<div class="panel-heading">
												<span class="panel-title">
												<a data-toggle="collapse" class="collapsed" href="#collapse2">
												<i class="ei ei-tie"></i> Expériences</a>
												</span>
											</div>
											<div id="collapse2" class="panel-collapse collapse">
												<div class="panel-body">

													<ul class="nav nav-tabs tab-style-1">
														<li class="active"><a data-toggle="tab" href="#Experience-1">Experience 1</a></li>
														<li><a data-toggle="tab" href="#Experience-2">Experience 2</a></li>
														<li><a data-toggle="tab" href="#Experience-3">Experience 3</a></li>
														<li><a data-toggle="tab" href="#Experience-4">Experience 4</a></li>
														<li><a data-toggle="tab" href="#Experience-5">Experience 5</a></li>
													</ul>
													<div class="tab-content">
														<div id="Experience-1" class="tab-pane fade pdd-horizon-10 in active">
														{% for experience in formulaireForm.experiences %}
														{{ form_widget(experience.type,{value :'entreprise'}) }}

															<h4>Entreprise :</h4>

															<div class="form-group">
																<label for="nom">Nom de l'entreprise*</label>
																{{ form_widget(experience.nom) }}
															</div>

															<div class="form-group">
																<label>Secteur* : </label>
																{{ form_widget(experience.secteur) }}
															</div>

															<div class="form-group">
																<label for="effectif">Effectifs :</label>
																{{ form_widget(experience.effectif) }}
															</div>

															<div class="form-group">
																<label for="url_entreprise">Site web de l'entreprise</label>
																{{ form_widget(experience.url_experience) }}
															</div>

															<div class="form-group">
																<label for="poste">Intitulé du poste*</label>
																{{ form_widget(experience.poste) }}
															</div>

															<div class="form-group">
																<label for="role">Rôle dans l'entreprise*</label>
																{{ form_widget(experience.role) }}
															</div>
															<div class="form-group">
																<label for="lieu_entreprise">Localisation du poste*</label>
																{{ form_widget(experience.lieu) }}
															</div>

															<div class="form-group">
																<label for="Duree">Durée du poste* : </label>
																<span> de </span>
														
																{{ form_widget(experience.date_debut) }}

																<select class="" name="annee_debut">
																	{% for annee_debut in range("now"|date("Y"),1950) %}
																		<option value="{{ annee_debut }}"> {{ annee_debut }}</option>
																	{% endfor %}
																</select>

																<span> à </span>
													
																{{ form_widget(experience.date_fin) }}

																<select class="" name="annee_fin">
																	{% for annee_fin in range("now"|date("Y"),1950) %}
																		<option value="{{ annee_fin }}"> {{ annee_fin }}</option>
																	{% endfor %}
																</select>
															</div>

															<div class="form-group">
																<label for="responsabilite">Responsabilités* :</label><br />
																{{ form_widget(experience.responsabilite1) }}
																{{ form_widget(experience.responsabilite2) }}
																{{ form_widget(experience.responsabilite3) }}
																{{ form_widget(experience.responsabilite4) }}
																{{ form_widget(experience.responsabilite5) }}
															</div>

															<div class="form-group">
																<label for="reussite">Réussites / accomplissements* :</label><br />
																{{ form_widget(experience.realisation1) }}
																{{ form_widget(experience.realisation2) }}
																{{ form_widget(experience.realisation3) }}
																{{ form_widget(experience.realisation4) }}
																{{ form_widget(experience.realisation5) }}
															</div>
															<div class="form-group col-md-12">
																<input class="btn btn-md btn-dark" name="entreprise1" type="submit" value="Valider">
															</div>
														{% endfor %}
														</div>
													</div>
												</div>
											</div>
										</div>
										<!-- Fin Partie expérience -->

										<!-- Partie formation -->
										<div class="panel panel-default">
											<div class="panel-heading">
												<span class="panel-title">
												<a data-toggle="collapse" class="collapsed" href="#collapse3">
												<i class="ei ei-open-book"></i> Formations</a>
												</span>
											</div>
											<div id="collapse3" class="panel-collapse collapse">
												<div class="panel-body">
													<ul class="nav nav-tabs tab-style-1">
														<li class="active"><a data-toggle="tab" href="#Formation-1">Formation 1</a></li>
														<li><a data-toggle="tab" href="#Formation-2">Formation 2</a></li>
														<li><a data-toggle="tab" href="#Formation-3">Formation 3</a></li>
														<li><a data-toggle="tab" href="#Formation-4">Formation 4</a></li>
														<li><a data-toggle="tab" href="#Formation-5">Formation 5</a></li>
													</ul>
													<div class="tab-content">
														<div id="Formation-1" class="tab-pane fade pdd-horizon-10 in active">
														{% for formation in formulaireForm.formations %}
														{{ form_widget(formation.type,{value :'formation'}) }}

															<div class="form-group">
																<label for="diplome">Diplome*</label>
																{{ form_widget(formation.diplome) }}
															</div>

															<div class="form-group">
																<label for="etablissement_formation">Etablissement*</label>
																{{ form_widget(formation.etablissement) }}
															</div>

															<div class="form-group">
																<label for="specialite_formation">Spécialité</label>
																{{ form_widget(formation.specialite) }}
															</div>

															<div class="form-group">
																<label for="lieu_formation">Localisation</label>
																{{ form_widget(formation.lieu) }}
															</div>

															<div class="form-group">
																<label for="date_diplome">Année d'obtention du diplome* : </label>
																<select class="" name="annee_diplome">
																	{% for annee_diplome in range("now"|date("Y"),1950) %}
																		<option value="{{ annee_diplome }}"> {{ annee_diplome }}</option>
																	{% endfor %}
																</select>
															</div>

															<div class="form-group">
																<label for="url_formation">Site web</label>
																{{ form_widget(formation.url_formation) }}
															</div>
															<div class="form-group col-md-12">
																<input class="btn btn-md btn-dark" type="submit" value="Valider">
															</div>
														{% endfor %}
														</div>
													</div>
												</div>
											</div>
										</div>
										<!-- Fin Partie formation -->

									</div>
								</div>
							</div>
						</div>	

						<div class="form-group">
							<ul class="list-inline pull-right">
	                            <li><a href="{{ path('pimpit') }}"><button type="button" class="btn btn-default prev-step">Etape précédente</button></a></li>
	                            <li><a href="{{ path('template_options') }}"><button type="button" class="btn btn-md btn-dark next step">Etape suivante</button></a></li>
	                        </ul>
	                    </div>	

					</div>
				</div>
			{{ form_end(formulaireForm)}}
			<!-- Fin formulaire -->
        </div>
    </section>
   </div>
</div>
<!-- Fin form wizard -->

{% endblock %}
